<div class="container my-5"> 
  <div class="row justify-content-center">
    <div class="col-xs-12 col-md-8 col-lg-8"> 
      <div class="container-edit shadow">
        <h2 class="my-3">Log in</h2>
        <%= simple_form_for(resource, as: resource_name, url: user_session_path) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
              <%# f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>
          <%= render 'devise/shared/forgotpass', class: "my-2" %>

          <div class="row">
            <div class="col-12">
              <div class="form-actions my-3 d-flex justify-content-between">
                <div class="my-auto">
                  <%= f.button :submit, "Log in", class: "btn btn-red-degrade py-1" %>
                </div>
                <div class="mx-3">
                  <p class="mb-1">Don't have an account?</p>
                  <%= render 'devise/shared/signup', class: "" %>
                </div>
              </div>
            </div> 
          </div>
        <% end %>
        <%#= render "devise/shared/links", class: "mx-2" %>
      </div>
    </div>
  </div>
</div>


