<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-12 col-lg-12">
      <div class="user-info-card">
        <div class="user-avatar">
          <% if @user.photo.attached? %>
            <%= cl_image_tag @user.photo.key, width: 235, height: 235, crop: :thumb, gravity: :face %>
          <% else %>
            <%= image_tag 'avatar-placeholder.png' %>
          <% end %>
        </div>
        <div class="d-flex flex-column w-100 mx-3">
          <div class="d-flex">
            <h2><%= @user.username %></h2><h2 class="ml-5"><%= age %></h2>
          </div>
          <h6><%= @user.full_name %></h6>         
          <p><i class="fas fa-envelope mr-1"></i><a href="<%= @user.email %>">Contact</a></p>
          <p>Currently in: <em><strong><%= @chats.count %> chats!</strong></em></p>
        </div>
      </div>
    </div>
  </div>
</div>  
<div class="container">
<h2><%= @user.username %> is also interested in...</h2>
  <div class="row grid">
    <% @user.activities.each do |act| %>
      <div>
        <div class="d-flex justify-content-center my-3">
          <div class="user-show-interest-card">
            <img src="<%= act.photo %>" />
            <%#= image_tag 'filename' %>
            <div class="user-show-interest-card-info">
              <%= link_to activity_path(act) do %>
                <h6><%= act.title %></h6>
              <% end %>              
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
