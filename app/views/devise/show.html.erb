<div class="container bg-white rounded-lg shadow pb-30px">
  <div class="row align-items-center">
    <div class="col-sm-12 col-md-5 col-lg-4">
      <div class="user-avatar">
        <% if @user.photo.attached? %>
          <%= cl_image_tag @user.photo.key, width: 300, height: 300, crop: :thumb, gravity: :face %>
        <% else %>
          <%= image_tag 'avatar-placeholder.png' %>
        <% end %>
      </div>
    </div>  
    <div class="col-sm-12 col-md-7 col-lg-6">
      <div class="user-info-card ml-3">
        <div class="d-flex flex-column w-100 justify-content-center">
          <div class="d-flex">
            <h2><%= @user.username %></h2><h2 class="ml-5"><%= age %></h2>
          </div>
          <h6><%= @user.full_name %></h6>         
          <p><i class="fas fa-envelope mr-1"></i><a href="<%= @user.email %>">Contact</a></p>
          
        </div>
      </div>
      <div class="ml-3">
        <p><strong>About me</strong></p>
        <p><%= @user.description %></p>
      </div>
    </div>
    <h2 class="m-4 "><%= @user.username %> is also interested in...</h2>
  </div>
  <div class="row grid">
    <% @user.activities.each do |act| %>
      <div>
        <div class="d-flex justify-content-center my-3">
          <div class="user-show-interest-card">
            <img src="<%= act.photo %>" />
            <%#= image_tag 'filename' %>
            <div class="user-show-interest-card-info">
              <%= link_to activity_path(act) do %>
                <h6><%= act.title %></h6>
              <% end %>              
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
