<div class="message" id="message-<%= message.id %>">
  <div class="author">
    <div class="d-flex">
    <!--Descomentar cuando los usuarios tengan foto-->
    <% if message.user.photo.attached? %>
      <%= cl_image_tag message.user.photo.key, class: "avatar" %>
    <% end %>
    <span class="username-chat"><%= message.user.username %></span>
    </div>
    <small><%= message.created_at.strftime("%b %e - %H:%M") %></small>
  </div>
  <div class="message-content">- <%= message.content %></div>
</div>