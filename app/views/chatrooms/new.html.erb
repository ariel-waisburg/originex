<div class="main-container">
  <div class="users-cards">
    <div class="row">
      <% @users.each do |user| %>
        <div class="col-12 col-md-6 col-xl-4">
            <div class="card-activity my-2">
              <img src="https://images.unsplash.com/photo-1541525897844-9851970da95a?ixid=MXwxMjA3fDB8MHxzZWFyY2h8MjF8fGxvbmdib2FyZGluZ3xlbnwwfHwwfA%3D%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60" />
              <div class="card-activity-infos">
                <div>
                  <h1><%= user.username %></h1>
                  <p><%= user.full_name %></p>
                </div>
              </div>
            </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="chatroom-form">
    <div class="container">
      <h3>Create your own chatroom</h3>
      <%= simple_form_for([@activity, @chatroom]) do |f| %>
        <%= f.input :title %>
        <%= f.input :description %>
        <%= f.button :submit, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>











