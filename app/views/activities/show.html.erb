<div class="show-banner">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div class="activity-header">
          <%= image_tag @activity.photo %>
          <div class="d-flex justify-content-between my-4">
            <div class="d-flex">
              <i class="fas fa-user-friends"></i>
              <p class="pl-3"><%= UserInterest.where(activity_id: params[:id]).count %></p>
              <p class="pl-1 pr-5">Interested</p>
              <i class="fas fa-map-marked-alt"></i>
              <p class="pl-3 pr-5"><%= @activity.zone %></p>
              <i class="fas fa-clipboard-check"></i>
              <p class="pl-3"><%= Event.where(activity_id: params[:id]).count %></p>
              <p class="pl-1">Events confirmed</p>
            </div>
            <div>
              <%= link_to 'Create chatroom', new_activity_chatroom_path(@activity), class: 'btn-red-degrade' %>
            </div>
          </div>
        </div>
          <div class="card-pofile-info">
            <h2><%= @activity.title %></h2>
            <p><%= @activity.category %> | <%= @activity.zone %></p>
            <p><%= @activity.description %></p>
          </div>
        <div class="d-flex justify-content-center">
          <%= link_to 'Go back', activities_path, class: 'btn-red-degrade m-3' %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="events-banner mb-3">
  <div class="container">
    <h3 class="text-center m-5">Explore, play & enjoy!</h3>
    <div class="row">
      <% @events.each do |event| %>
        <div class="col-12 col-md-6 col-lg-4">
          <div class="card-activity my-3">
            <img src="https://i.pinimg.com/736x/a0/c4/c9/a0c4c9abd3fb0bfb6284f94d99e62760.jpg" />
            <div class="p-4">
              <div>
                <h1><%= event.date.to_datetime.strftime('%a %d/%m/%Y') %></h1>
                <p class="m-0"><%= event.details %> | <%= event.status %></p>
              </div>
              <div class="d-flex justify-content-center pb-2">
                <div class="event-show-contact-link">
                  <%= link_to "View event details", event_path(event), class: "btn-red-degrade" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>