<div class="show-banner ">
  <div class="container rounded bg-white">
    <div class="row">
      <div class="col-12">
        <div class="activity-header mt-3">
          <%= image_tag @activity.photo %>
          <div class="d-flex justify-content-between my-4">
            <div class="row">
              <div class="col-sm-6 col-md-4 d-flex">
                <i class="fas fa-user-friends" style="width: 40px"></i>
                <p class="mx-2 mt-1"><%= UserInterest.where(activity_id: params[:id]).count %></p>
                <p class="mt-1">Interested</p>
              </div>
              <div class="col-sm-6 col-md-4 d-flex">
                <i class="fas fa-map-marked-alt" style="width: 40px"></i>
                <p class="ml-2 mt-1"><%= @activity.zone %></p>
              </div>
              <div class="col-sm-6 col-md-4 d-flex">
                <i class="fas fa-clipboard-check" style="width: 40px"></i>
                <p class="mx-2 mt-1"><%= Event.where(activity_id: params[:id]).count %></p>
                <p class="mt-1">Events confirmed</p>
              </div>
            </div>
            <div>
              <%= link_to 'Create chatroom', new_activity_chatroom_path(@activity), class: 'btn btn-red-degrade' %>
            </div>
          </div>
        </div>
        <div class="activity-detail">
          <h2><%= @activity.title %></h2>
          <h3><%= @activity.category %> | <%= @activity.zone %></h3>
          <p><%= @activity.description %></p>
        </div>
      </div>
    </div>
    <div class="container">
      <h3 class="text-center my-3">Explore, play & enjoy!</h3>
      <div class="row">
        <% @events.each do |event| %>
          <div class="col-12 col-md-6 col-lg-4">
            <div class="card-activity my-3">              
              <% if event.photo.attached? %>
                <%= cl_image_tag event.photo.key %>
              <% else %>
                <%= image_tag "https://upload.wikimedia.org/wikipedia/commons/8/89/Portrait_Placeholder.png", :class => "event-img-placeholder" %>
              <% end %>                            
              <div class="pl-3 pt-3">
                <div>
                  <h1><%= event.chatroom.title %></h1>
                  <div>
                    <p class="my-1"><i class="fas fa-calendar-alt mr-3"></i><%= event.date.to_datetime.strftime('%a %d/%m/%Y') %></p>
                    <p class="mr-3"><i class="fas fa-broadcast-tower mr-3"></i><%= event.status.capitalize %></p>
                  </div>
                </div>
                <div class="details-button d-flex justify-content-end">                  
                  <%= link_to "Details", event_path(event), class: "btn btn-red-degrade btn-sm" %>                  
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <div class="d-flex justify-content-start my-5">
        <%= link_to 'Go back', activities_path, class: 'btn-link m-3' %>
      </div>
    </div>
  </div>
</div>


