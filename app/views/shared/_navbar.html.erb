
<div class="navbar navbar-expand-sm navbar-light navbar-originex d-flex align-items-center justify-content-between">
  <div style="width: 20%;">
    <%= link_to root_path, class: "navbar-logo" do %>
      <%= image_tag "logo.png", alt: "Originex logo", width: "150" %>
    <% end %>
  </div>
  <button class="navbar-toggler btn-menu" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
  </button>
  <div class="d-none d-md-flex align-items-center mb-0">
    <%= link_to "Home", root_path, class: "navbar-link mx-2" %>
    <%= link_to "Activities", root_path, class: "navbar-link mx-2" %>
    <%= link_to "Reviews", root_path, class: "navbar-link mx-2" %>
    <%= link_to "About us", root_path, id: "about-us", class: "navbar-link mx-2" %>
  </div>
  <div class="avatar-section collapse navbar-collapse" id="navbarSupportedContent" style="width: 20%;">
    <% if user_signed_in? %>
      <div class="nav-item dropdown avatar-img">
        <div id="dropdown-section">
          <img class="avatar dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src="https://images.unsplash.com/photo-1553867745-6e038d085e86?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=813&q=80" />
          <div class="dropdown-menu mt-0 dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Profile", root_path, class: "dropdown-item" %> 
            <%= link_to "Sign out", destroy_user_session_path, method: :delete, class: "dropdown-item" %> 
          </div>
        </div>
      </div>  
    <% else %>
      <div class="d-flex justify-content-between align-items-center" style="width: 220px;">
      <%= link_to "Log in", new_user_session_path, class: "btn-red-degrade mx-1" %>
      <%= link_to "Join us", new_user_registration_path, class: "btn-red-degrade mx-1" %>
      </div>
    <% end %>
  </div>
</div> 
